<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Esheba Services</title>
  </head>
  <body>
    <div class="services under category">
      <% if (services.length > 0) { %> <% services.forEach(service => { %>
      <h3 class="title"><%= service.NAME %></h3>
      <p class="description">
        <strong>Description: </strong> <%= service.DESCRIPTION %>
      </p>
      <p class="cost"><strong>Cost: </strong><%= service.COST %></p>
      <% }) %> <% } else { %>
      <p>There are no services to display...</p>
      <% } %> <% if (comments.length > 0) { %>
      <h3>Customer Feedbacks:</h3>
      <% comments.forEach(comment => { %>
      <h3 class="customer"><%= comment.CUSTOMER_NAME %></h3>
      <p class="feedback">
        <strong>Feedback: </strong> <%= comment.COMMENTS %>
      </p>
      <p class="ratings"><strong>Rating: </strong> <%= comment.STAR %></p>
      <% }) %> <% } else { %> <% } %>
    </div>
  </body>
</html>
