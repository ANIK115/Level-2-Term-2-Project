<!DOCTYPE html>
<html lang="en">
  <%- include("./headers/customer_home.ejs") %>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />

    <title>Esheba Services</title>
  </head>
  <body>
    <form action="/api/services/<%=category_id%>" method="post">
      <div class="services under category">
        <% if (services.length > 0) { %> <% services.forEach(service => { %>
        <div>
          <h3 class="service-name"><%= service.NAME %></h3>
          <label>
            <input
              type="checkbox"
              name="checkedService"
              value="<%= service.ID %>"
            />Order this service <%= service.NAME %></label
          >
        </div>
        <p class="description">
          <strong>Description: </strong> <%= service.DESCRIPTION %>
        </p>
        <p class="cost"><strong>Cost: </strong><%= service.COST %></p>
        <% }) %> <% } else { %>
        <p>There are no services to display...</p>
        <% } %>
      </div>
    
    <form action="/api/services/<%=category_id%>" method="post">
      <div>
        <input
          type="submit"
          value="Add Order"
          class="btn btn-link my-order-btn"
        />
      </div>
      
    </form>
  </body>
</html>
