  <!doctype html>
  <html lang="en">

  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Provider Profile</title>
  </head>

  <body>
    <div class="container">
      <div class="shadow p-3 mt-3">
        <div>
          <div>
            <div class="shadow p-3 mt-3 d-flex justify-content-between">
              ​
              <h3>Profile</h3>
              <a class="btn btn-outline-warning ms-2" href="#">
                <i class="bi bi-pencil-square"></i>
                Edit Profile
              </a>
              ​
              ​
            </div>
            <section class="shadow mt-3 p-3">
              <h3>Personal Information</h3>
              <hr>
              <form action="/my-section/profile" method="post">
                <div class="row">

                    <div class="mb-3">
                      <label for="floatingInput">Name</label>
                      <input disabled required type="text" name="name" value="<%= provider.NAME %>" class="form-control"
                        id="floatingInput" placeholder="Jon Doe">
                      ​
                    </div>
                    ​

                </div>
                <hr>
                <h3>Contact Information</h3>
                <div class="row">
                  <div class="col-6">
                    <div class="mb-3">
                      <label for="floatingInput">Phone Number</label>
                      <input disabled type="text" name="phone" value="<%= provider.PHONE_NUMBER %>" class="form-control"
                        id="floatingInput" placeholder="+8801xxxxxxxxx">
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="mb-3">
                      <label for="floatingInput">Email address</label>
                      <input disabled type="email" name="email" value="<%=provider.EMAIL%>" class="form-control"
                        id="floatingInput" placeholder="name@example.com">
                    </div>
                  </div>
                </div>
                <h3>Service Related Information</h3>
                ​<div class="mb-3">
                  <label for="reg" class="form-label pb-1">Date of Registration</label>
                  <input disabled type="date" name="reg" value="<%=provider.REG_DATE%>"
                    class="form-control personal p-3 date-of-birth">
                </div>

                <div class="mb-3">
                  <label for="floatingInput">Income</label>
                  <input disabled type="income" name="income" value="<%=provider.INCOME%>" class="form-control"
                    id="floatingInput" placeholder="taka">
                </div>

                <div class="mb-3">
                  <label for="floatingInput">Licence ID</label>
                  <input disabled type="lid" name="lid" value="<%=provider.LICENCE_ID%>" class="form-control"
                    id="floatingInput" placeholder="lid">
                </div>


                <div class="mb-3">
                  <label for="floatingInput">Type of Service Provided</label>
                  <input disabled type="service" name="service" value="<%=provider.SERVICE_NAME%>" class="form-control"
                    id="floatingInput" placeholder="service">
                </div>

                <div class="mb-3">
                  <label for="floatingInput">Total Services Provided</label>
                  <input disabled type="total" name="total" value="<%=provider.CNTSERVICE%>" class="form-control"
                    id="floatingInput" placeholder="count of services">
                </div>
              </form>
            </section>
          </div>
        </div>
      </div>
    </div>

