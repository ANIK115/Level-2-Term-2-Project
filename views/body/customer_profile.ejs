<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>Customer Profile</title>
  </head>

  <body>
    <div class="container">
      <div class="shadow p-3 mt-3">
        <div>
          <div>
            <div class="shadow p-3 mt-3 d-flex justify-content-between">
              ​
              <h3>Profile</h3>
              <a class="btn btn-outline-warning ms-2" href="#">
                <i class="bi bi-pencil-square"></i>
                Edit Profile
              </a>
              ​ ​
            </div>
            <section class="shadow mt-3 p-3">
              <h3>Personal Information</h3>
              <hr />
              <form action="/profile" method="post">
                <div class="row">
                  <div class="mb-3">
                    <label for="floatingInput">Name</label>
                    <input
                      disabled
                      required
                      type="text"
                      name="name"
                      value="<%= customer.NAME %>"
                      class="form-control"
                      id="floatingInput"
                      placeholder="Jon Doe"
                    />
                    ​
                  </div>
                  ​
                </div>
                <hr />
                <h3>Contact Information</h3>
                <div class="row">
                  <div class="col-6">
                    <div class="mb-3">
                      <label for="floatingInput">Phone Number</label>
                      <input
                        disabled
                        type="text"
                        name="phone"
                        value="<%= customer.PHONE_NUMBER %>"
                        class="form-control"
                        id="floatingInput"
                        placeholder="+8801xxxxxxxxx"
                      />
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="mb-3">
                      <label for="floatingInput">Email address</label>
                      <input
                        disabled
                        type="email"
                        name="email"
                        value="<%=customer.EMAIL %>"
                        class="form-control"
                        id="floatingInput"
                        placeholder="name@example.com"
                      />
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="floatingInput">Address</label>
                  <input
                    disabled
                    type="text"
                    name="address"
                    value="<%= customer.ADDRESS %>"
                    class="form-control"
                    id="floatingInput"
                    placeholder="Dhaka, Bangladesh"
                  />
                </div>
                <h3>Order Related Information</h3>
                ​
                <div class="mb-3">
                  <label for="reg" class="form-label pb-1"
                    >Date of Registration</label
                  >
                  <input
                    disabled
                    type="date"
                    name="reg"
                    value="<%=customer.REG_DATE %>"
                    class="form-control personal p-3 date-of-birth"
                  />
                </div>
                <div class="row">
                  <div class="mb-3">
                    <label for="floatingInput">Total Services Taken</label>
                    <input
                      disabled
                      type="total"
                      name="total"
                      value="<%=customer.CNTORDERS %>"
                      class="form-control"
                      id="floatingInput"
                      placeholder="count of orders"
                    />
                  </div>
                </div>
              </form>
            </section>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

