<!DOCTYPE html>
<html lang="en">
  <%- include("../../headers/moderator_home.ejs") %>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Offer</title>
    <style type="text/css">
      * {
        margin: 0;
        padding: 0;
      }
      body {
        background-color: white;
        font-family: sans-serif;
        background-image: url("https://png.pngtree.com/thumb_back/fh260/back_our/20190617/ourmid/pngtree-today-s-special-offer-limited-time-to-buy-poster-background-template-image_127084.jpg");
        background-size: cover;
      }
      .container {
        width: 400px;
        margin: 50px auto 0px auto;
      }
      h2 {
        text-align: center;
        padding: 20px;
        font-family: sans-serif;
      }
      .register {
        background-color: rgba(0, 0, 0, 0.5);
        width: 100%;
        font-size: 18px;
        border-radius: 10px;
        border: 1px solid rgba (255, 255, 255, 0.3);
        color: #fff;
        padding-left: 5px;
        padding-top: 10px;
        padding-bottom: 20px;
      }
      label {
        font-family: sans-serif;
        font-size: 18px;
        font-style: italic;
      }
      button {
        width: 80px;
        height: 35px;
      }
      input#discount {
        width: 300px;
      }
      input#name {
        width: 300px;
      }
      input#start_date {
        width: 300px;
      }
      input#end_date {
        width: 300px;
      }
      select#services {
        width: 300px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="register">
        <h2>Add New Offer</h2>
        <form action="/moderatorapi/home/addoffers" method="POST">
          <div class="offer-name">
            <label for="offer name">Offer Name:</label>
            <br />
            <input
              type="text"
              id="name"
              name="name"
              required
              value="<%= (typeof form != 'undefined')? form.offer_name : '' %>"
            />
            <br /><br />
          </div>
          <div class="service-name">
            <label for="services">Select services</label>
            <br />
            <select name="services" id="services">
              <% var options = [];console.log(services) %> <% for(var i = 0; i <
              services.length; i++) { %>
              <option value="<%= services[i].SERVICE_NAME %>">
                <%= services[i].SERVICE_NAME %>
              </option>
              <% } %>
            </select>
            <br /><br />
          </div>
          <div class="discount">
            <label for="discount">Percentage of Discount:</label>
            <br />
            <input
              type="number"
              id="discount"
              name="discount"
              min="5"
              max="30"
              required
              value="<%= (typeof form != 'undefined')? form.discount : '' %>"
            />
            <br /><br />
          </div>
          <div class="start-date">
            <label for="start_date">Start Date:</label>
            <br />
            <input
              type="date"
              id="start_date"
              name="start_date"
              required
              value="<%= (typeof form != 'undefined')? form.start_date : '' %>"
            />
            <br /><br />
          </div>
          <div class="end-date">
            <label for="end_date">End Date:</label>
            <br />
            <input
              type="date"
              id="end_date"
              name="end_date"
              required
              value="<%= (typeof form != 'undefined')? form.end_date : '' %>"
            />
            <br /><br />
          </div>
          <div class="submit-button">
            <button>Submit</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
