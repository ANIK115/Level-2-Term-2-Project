<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Service</title>
  </head>
  <body>
    <div class="create-service content">
      <form action="/moderatorapi/addservice" method="POST">
        <label for="title">Service Name:</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          value="<%= (typeof form != 'undefined')? form.name : '' %>"
        />
        <br />
        <label for="category">Select Category</label>
        <select name="categories">
          <% var options = []; %> <% for(var i = 0; i < categories.length; i++)
          { %>
          <option value="<%= categories[i].CATEGORY_NAME %>">
            <%= categories[i].CATEGORY_NAME %>
          </option>
          <% } %>
        </select>
        <br />
        <label for="description">Service Description:</label>
        <input
          type="text"
          id="description"
          name="description"
          required
          value="<%= (typeof form != 'undefined')? form.description : '' %>"
        />
        <br />
        <label for="cost">Service Cost:</label>
        <input
          type="number"
          id="cost"
          name="cost"
          min="100"
          required
          value="<%= (typeof form != 'undefined')? form.cost : '' %>"
        />
        <br />
        <label for="img">Service Cover Photo</label>
        <input
          type="text"
          id="img"
          name="img"
          required
          value="<%= (typeof form != 'undefined')? form.cost : '' %>"
        />
        <br />
        <button>Submit</button>
      </form>
    </div>
  </body>
</html>
